# Auto detect text files and perform LF normalization
* text=auto

# These files are text and should be normalized
*.java text
*.kt text
*.xml text
*.gradle text
*.properties text
*.txt text
*.md text
*.json text
*.yml text
*.yaml text

# These are binary files and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.jar binary
*.class binary
*.so binary
*.dll binary

# Explicitly declare Gradle cache files as binary
.gradle/**/*.jar binary
.gradle/**/*.class binary
.gradle/**/*.so binary
.gradle/**/*.dll binary

# Force LF line endings for these files
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Force CRLF for Windows-specific files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf